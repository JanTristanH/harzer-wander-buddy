{
    "name": "hwb",
    "version": "1.0.0",
    "description": "A simple CAP project.",
    "repository": "<Add your repository here>",
    "license": "UNLICENSED",
    "private": true,
    "dependencies": {
        "@cap-js-community/odata-v2-adapter": "^1.12.8",
        "@sap/cds": "^7",
        "express": "^4"
    },
    "devDependencies": {
        "sqlite3": "^5.0.8",
        "uuid": "^9.0.0"
    },
    "scripts": {
        "start": "cds run",
        "watch": "cds watch"
    },
    "cds": {
        "requires": {
            "auth": {
                "[development]": {
                    "kind": "basic-auth",
                    "users": {
                        "Kevin": {
                            "pass": "pass",
                            "roles": [
                                "dummy"
                            ]
                        },
                        "Alice": {
                            "pass": "pass"
                        },
                        "*": false
                    }
                }
            }
        }
    },
    "eslintConfig": {
        "extends": "eslint:recommended",
        "env": {
            "es2020": true,
            "node": true,
            "jest": true,
            "mocha": true
        },
        "globals": {
            "SELECT": true,
            "INSERT": true,
            "UPDATE": true,
            "DELETE": true,
            "CREATE": true,
            "DROP": true,
            "CDL": true,
            "CQL": true,
            "CXL": true,
            "cds": true
        },
        "rules": {
            "no-console": "off",
            "require-atomic-updates": "off"
        }
    }
}

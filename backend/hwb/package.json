{
  "name": "hwb",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js-community/odata-v2-adapter": "^1.12.8",
    "@cap-js/postgres": "^1.8.0",
    "@sap/cds": "^7",
    "dotenv": "^16.4.5",
    "express": "^4",
    "node-fetch": "^2.7.0",
    "sqlite3": "^5.0.8",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@sap/cds-dk": "^7"
  },
  "scripts": {
    "start": "cds-serve",
    "watch": "cds watch",
    "deploy": "cds deploy",
    "watch-frontendhwb": "cds watch --open frontendhwb/webapp/index.html?sap-ui-xx-viewCache=false"
  },
  "cds": {
    "requires": {
      "db": {
        "[development]": {
          "kind": "sqlite",
          "credentials": {
            "url": "db.sqlite"
          }
        },
        "[production]": {
          "impl": "@cap-js/postgres",
          "kind": "postgres",
          "pool": {
            "acquireTimeoutMillis": 5000,
            "min": 1,
            "max": 100,
            "fifo": true
          }
        }
      },
      "auth": {
        "[development]": {
          "kind": "basic-auth",
          "users": {
            "Tris": {
              "pass": "pass"
            },
            "Momo": {
              "pass": "pass"
            },
            "Lars": {
              "pass": "pass"
            },
            "Ammi": {
              "pass": "pass"
            },
            "Husi": {
              "pass": "5"
            },
            "Kevin": {
              "pass": "pass",
              "roles": [
                "dummy"
              ]
            },
            "Alice": {
              "pass": "pass"
            },
            "*": false
          }
        },
        "[production]": {
          "kind": "basic-auth",
          "users": {
            "Tris": {
              "pass": "pass"
            },
            "Momo": {
              "pass": "pass"
            },
            "Lars": {
              "pass": "pass"
            },
            "Ammi": {
              "pass": "pass"
            },
            "Husi": {
              "pass": "5"
            },
            "Kevin": {
              "pass": "pass",
              "roles": [
                "dummy"
              ]
            },
            "Alice": {
              "pass": "pass"
            },
            "*": false
          }
        }
      }
    }
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "env": {
      "es2020": true,
      "node": true,
      "jest": true,
      "mocha": true
    },
    "globals": {
      "SELECT": true,
      "INSERT": true,
      "UPDATE": true,
      "DELETE": true,
      "CREATE": true,
      "DROP": true,
      "CDL": true,
      "CQL": true,
      "CXL": true,
      "cds": true
    },
    "rules": {
      "no-console": "off",
      "require-atomic-updates": "off"
    }
  }
}
<mvc:View
    controllerName="hwb.frontendhwb.controller.RoutesMap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <VBox>
        <HBox justifyContent="SpaceBetween">
            <Button
                class="sapUiTinyMargin"
                press='onBackToList'
                type="Transparent"
                text="{i18n>back}"
                icon="sap-icon://navigation-left-arrow"
            />
            <Button
                class="sapUiTinyMargin"
                text="{i18n>share}"
                icon="sap-icon://share-2"
                type="Transparent"
                press="onButtonShareTourPress"
            />
        </HBox>
        <FlexBox
            justifyContent="SpaceAround"
            alignItems="Center"
        >
            <VBox
                alignContent="Center"
                alignItems="Center"
                class="sapUiMediumMarginBegin"
            >
                <core:Icon src="sap-icon://fob-watch" />
                <Text
                    text="{path: 'local>/duration', formatter: '.formatSecondsToTime'}"
                />
            </VBox>
            <Text text="|" />
            <VBox
                alignContent="Center"
                alignItems="Center"
            >
                <core:Icon src="sap-icon://direction-arrows" />
                <Text
                    text="{path: 'local>/distance', formatter: '.formatMetersToKilometers'}"
                />
            </VBox>
            <Text text="|" />
            <VBox
                alignContent="Center"
                alignItems="Center"
            >
                <core:Icon src="sap-icon://toaster-top" />
                <Text text="{local>/stampCount}" />
            </VBox>
            <Text text="|" />
            <VBox
                alignContent="Center"
                alignItems="Center"
                class="sapUiMediumMarginEnd"
            >
                <core:Icon src="sap-icon://trend-up" />
                <Text text="-" />
            </VBox>
        </FlexBox>
    </VBox>
    <Panel
        expandable="true"
        width="auto"
        headerText="Routen Details"
        class="sapUiResponsiveMargin"
    >
        <ScrollContainer
            width="100%"
            height="400px"
            vertical="true"
            horizontal="false"
        >
            <List
                id="list"
                headerText="Routen Stationen"
                growingScrollToLoad="true"
                items="{local>/routes}"
            >
                <StandardListItem
                    title="{local>name}"
                    description="{local>toPoiType} - {local>travelMode}"
                    icon="{path: 'local>travelMode', formatter: '.onFormatTravelModeIcon'}"
                />
            </List>
        </ScrollContainer>
    </Panel>
    <mvc:XMLView
        id="RoutesMapId"
        async="true"
        viewName="hwb.frontendhwb.view.MapInner"
    />
</mvc:View>

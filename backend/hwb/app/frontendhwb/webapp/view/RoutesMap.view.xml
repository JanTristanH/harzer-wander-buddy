<mvc:View
    controllerName="hwb.frontendhwb.controller.RoutesMap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <VBox>
        <Button
            press='onBackToList'
            text="Zurück zur Liste"
            icon="sap-icon://navigation-left-arrow"
        />

        <Text
            text="Länge: {path: 'local>/duration', formatter: '.formatSecondsToTime'} - Distanz: {path: 'local>/distance', formatter: '.formatMetersToKilometers'} - Stempel: {local>/stampCount}"
        />
    </VBox>
    <Panel
        expandable="true"
        width="auto"
        headerText="Routen Details"
        class="sapUiResponsiveMargin"
    >
        <ScrollContainer
            width="100%"
            height="400px"
            vertical="true"
            horizontal="false"
        >
            <List
                id="list"
                headerText="Routen Stationen"
                growingScrollToLoad="true"
                items="{local>/routes}"
            >
                <StandardListItem
                    title="{local>name}"
                    description="{local>toPoiType} - {local>travelMode}"
                    icon="{path: 'local>travelMode', formatter: '.onFormatTravelModeIcon'}"
                />
            </List>
        </ScrollContainer>
    </Panel>
    <mvc:XMLView
        id="RoutesMapId"
        async="true"
        viewName="hwb.frontendhwb.view.MapInner"
    />
</mvc:View>

<mvc:View
    controllerName="hwb.frontendhwb.controller.RoutesMap"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    displayBlock="true"
    height="100%"
    busyIndicatorDelay="0"
>
    <Button
        press='onBackToList'
        text="ZurÃ¼ck zur Liste"
        icon="sap-icon://navigation-left-arrow"
    />
    <Panel
        expandable="true"
        width="auto"
        headerText="Routen Details"
        class="sapUiResponsiveMargin"
    >
    <ScrollContainer
        width="100%"
        height="400px"
        vertical="true"
        horizontal="false"
    >
        <List
            id="list"
            headerText="Routen Stationen"
            growingScrollToLoad="true"
            items="{local>/routes}"
        >
        <StandardListItem
            title="{local>name}"
            description="{local>toPoiType} - {local>travelMode}"
            icon="{path: 'local>travelMode', formatter: '.onFormatTravelModeIcon'}"
        />
        </List>
    </ScrollContainer>
    </Panel>
    <mvc:XMLView
        id="RoutesMapId"
        async="true"
        viewName="hwb.frontendhwb.view.MapInner"
    />
</mvc:View>

<mvc:View
    controllerName="hwb.frontendhwb.controller.RoutesMap"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <Page
        id="idPageRouteMapInner"
        enableScrolling="false"
        title="{i18n>title}"
    >
        <headerContent>
            <Button
                icon="sap-icon://filter"
                text="{i18n>filter}"
                press="onPressOpenFiltersMenu"
            />
            <core:Fragment
                id="idCurrentUserAvatarMapInnerRoute"
                fragmentName="hwb.frontendhwb.fragment.currentUserAvatar"
                type="XML"
            />
        </headerContent>
        <subHeader>
            <Toolbar>
                <SearchField
                    id="idMapSearchFieldRoute"
                    showSearchButton="false"
                    enableSuggestions="true"
                    search=".onSearchFieldSearch"
                    suggest=".onSearchFieldSuggest"
                    suggestionItems="{local>/suggestionItems}"
                    class="sapUiSmallMargin"
                >
                    <SuggestionItem
                        description="{local>name}"
                        key="{local>ID}"
                    />
                </SearchField>
                <Button icon="sap-icon://company-view" press=".onOpenGroupManagement" text="{i18n>group}" class="sapUiSmallMargin"/>
            </Toolbar>
        </subHeader>
        <content>
            <l:FixFlex class="fixFlexVertical">
                <l:flexContent>
                    <core:Fragment
                        fragmentName="hwb.frontendhwb.fragment.MainMapLeaflet"
                        type="XML"
                    />
                </l:flexContent>
            </l:FixFlex>
        </content>
    </Page>
</mvc:View>

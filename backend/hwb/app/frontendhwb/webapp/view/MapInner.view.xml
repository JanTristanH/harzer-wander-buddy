<mvc:View
    controllerName="hwb.frontendhwb.controller.MapInner"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <Page
        id="page"
        enableScrolling="false"
        title="{i18n>title}"
    >
        <headerContent>
            <Button
                icon="sap-icon://menu2"
                press="onPressOpenFiltersMenu"
            />
        </headerContent>
        <subHeader>
            <OverflowToolbar>
                <SearchField enabled="false"/>
            </OverflowToolbar>
        </subHeader>
        <content>
        <l:FixFlex class="fixFlexVertical">
            <l:flexContent>    
                    <core:Fragment
                    fragmentName="hwb.frontendhwb.fragment.MainMap"
                    type="XML"
                    />
            </l:flexContent>
        </l:FixFlex>
        </content>
    </Page>
</mvc:View>

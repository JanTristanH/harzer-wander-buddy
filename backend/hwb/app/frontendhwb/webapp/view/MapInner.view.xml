<mvc:View
    controllerName="hwb.frontendhwb.controller.MapInner"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <Page
        id="page"
        enableScrolling="false"
        title="{i18n>title}"
    >
        <headerContent>
            <Button
                icon="sap-icon://filter"
                text="{i18n>filter}"
                press="onPressOpenFiltersMenu"
            />
            <core:Fragment
                id="idCurrentUserAvatarMapInner"
                fragmentName="hwb.frontendhwb.fragment.currentUserAvatar"
                type="XML"
            />
        </headerContent>
        <subHeader>
            <Toolbar>
                <SearchField
                    id="idMapSearchField"
                    showSearchButton="false"
                    enableSuggestions="true"
                    search=".onSearchFieldSearch"
                    suggest=".onSearchFieldSuggest"
                    suggestionItems="{local>/suggestionItems}"
                    class="sapUiSmallMargin"
                >
                    <SuggestionItem
                        description="{local>name}"
                        key="{local>ID}"
                    />
                </SearchField>
                <Button
                    icon="sap-icon://company-view"
                    press=".onOpenGroupManagement"
                    text="{i18n>group}"
                    class="sapUiSmallMargin"
                />
            </Toolbar>
        </subHeader>
        <content>
            <core:Fragment
                fragmentName="hwb.frontendhwb.fragment.MainMapLeaflet"
                type="XML"
            />
<VBox
    id="bottomSheet"
    visible="true"
    class="customBottomSheet"
>
    <HBox class="sheetHeader">
        <VBox class="dragHandle"></VBox>
        <Button icon="sap-icon://decline" press=".onCloseBottomSheet" class="closeBtn" />
    </HBox>
    <VBox class="sheetContent">
        <Text text="🗺️ POI Details Here" />
        <Text text="More content..." />
    </VBox>
</VBox>

            <!-- <core:Fragment
                fragmentName="hwb.frontendhwb.fragment.POIInfoCard"
                type="XML"
            /> -->
        </content>
    </Page>
</mvc:View>

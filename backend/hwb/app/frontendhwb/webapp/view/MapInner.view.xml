<mvc:View
    controllerName="hwb.frontendhwb.controller.MapInner"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    height="100%"
>
    <Page
        id="page"
        enableScrolling="false"
        title="{i18n>title}"
    >
        <headerContent>
            <Button
                icon="sap-icon://menu2"
                press="onPressOpenFiltersMenu"
            />
            <core:Fragment
                fragmentName="hwb.frontendhwb.fragment.currentUserAvatar"
                type="XML"
            />
        </headerContent>
        <subHeader>
            <OverflowToolbar>
                <SearchField
                    id="idMapSearchField"
                    showSearchButton="false"
                    enableSuggestions="true"
                    search=".onSearchFieldSearch"
                    suggest=".onSearchFieldSuggest"
                    suggestionItems="{local>/suggestionItems}"
                >
                    <SuggestionItem
                        description="{local>name}"
                        key="{local>longitude};{local>latitude}"
                    />
                </SearchField>
            </OverflowToolbar>
        </subHeader>
        <content>
            <l:FixFlex class="fixFlexVertical">
                <l:flexContent>
                    <core:Fragment
                        fragmentName="hwb.frontendhwb.fragment.MainMap"
                        type="XML"
                    />
                </l:flexContent>
            </l:FixFlex>
        </content>
    </Page>
</mvc:View>

<mvc:View controllerName="hwb.frontendhwb.controller.Map"
    id="idMapView"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:f="sap.f"
    xmlns="sap.m">
    <Page id="page" showHeader="false">
        <content>
            <l:Splitter orientation="Vertical" id="idSplitter">
                <mvc:XMLView viewName="hwb.frontendhwb.view.MapInner"/>
                <!-- an f:card will be added here based on POI selection -->
            </l:Splitter>
        </content>
        <footer>
            <core:Fragment
                fragmentName="hwb.frontendhwb.fragment.Toolbar"
                type="XML"
            />
        </footer>
    </Page>
</mvc:View>

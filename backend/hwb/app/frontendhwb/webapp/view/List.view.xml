<mvc:View
    controllerName="hwb.frontendhwb.controller.List"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <App id="app">
        <Page title="{i18n>title}">
            <headerContent>
                <core:Fragment
                    fragmentName="hwb.frontendhwb.fragment.currentUserAvatar"
                    type="XML"
                />
            </headerContent>
            <content>
                <HBox class="sapUiResponsiveContentPadding">
                    <Table
                        id="StampingsTable"
                        inset="false"
                        growing="true"
                        growingThreshold="250"
                        mode="MultiSelect"
                        selectionChange="onSelectionChange"
                        items="{
                            path: '/Stampboxes',
                            sorter: {
                                path: 'orderBy'
                            },
                            parameters:{expand : 'Stampings'}
                        }"
                        updateFinished=".onStampingsUpdateFinished"
                    >
                        <headerToolbar>
                            <Toolbar>
                                <Title
                                    text="{i18n>stamps}"
                                    level="H2"
                                />
                                <ToolbarSpacer />
                                <Button
                                    icon="sap-icon://badge"
                                    press="onShowBagdesButtonPress"
                                    text="{i18n>myBadges}"
                                />
                                <Label
                                    id="selectedCount"
                                    text="{i18n>visitedStampms}: {app>/selectedCount}"
                                />
                            </Toolbar>
                        </headerToolbar>
                        <columns>
                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                popinDisplay="Inline"
                                width="auto"
                            >
                                <Text text="Stempelstelle" />
                            </Column>
                            <Column
                                minScreenWidth="Tablet"
                                demandPopin="true"
                                popinDisplay="Inline"
                                width="auto"
                            >
                                <Text text="Nummer" />
                            </Column>
                        </columns>
                        <items>
                            <ColumnListItem type="Active">
                                <cells>
                                    <ObjectIdentifier title="{name}" />
                                    <Text text="{number}" />
                                </cells>
                            </ColumnListItem>
                        </items>
                    </Table>
                </HBox>
            </content>
            <footer>
                <core:Fragment
                    fragmentName="hwb.frontendhwb.fragment.Toolbar"
                    type="XML"
                />
            </footer>
        </Page>
    </App>
</mvc:View>

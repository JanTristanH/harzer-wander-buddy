<VBox
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:card="sap.f.cards"
    xmlns:core="sap.ui.core"
>
    <HBox
        justifyContent="End"
        alignItems="Center"
        class="sapUiTinyMarginTop sapUiTinyMarginEnd"
    >
        <Button
            icon="sap-icon://decline"
            type="Transparent"
            press="onButtonClosePress"
        />
    </HBox>
    <f:Card
        class="sapUiSmallMarginBeginEnd"
        width="92%"
    >
        <f:header>
            <card:Header title="{local>/title}" />
        </f:header>
        <f:content>
            <VBox
                class="sapUiSmallMargin"
                justifyContent="SpaceBetween"
            >
                <HBox
                    width="85%"
                    class="scrollableHbox"
                >
                    <Button
                        text="{i18n>navigate}"
                        icon="sap-icon://forward"
                        type="Emphasized"
                        press="onButtonOpenWithMapsAppPress"
                        class="sapUiTinyMarginEnd sapUiSmallMarginBottom"
                    />
                    <core:Fragment fragmentName="hwb.frontendhwb.fragment.GroupAwareStampMenuButton" type="XML" />
                    <Button
                        text="{i18n>share}"
                        icon="sap-icon://share-2"
                        type="Transparent"
                        press="onButtonSharePress"
                        class="sapUiTinyMarginEnd sapUiSmallMarginBottom"
                    />
                    <Button
                        text="{i18n>website}"
                        icon="sap-icon://world"
                        visible="{local>/bStampingVisible}"
                        type="Transparent"
                        press="onButtonOpenExternalPress"
                        class="sapUiTinyMarginEnd sapUiSmallMarginBottom"
                    />
                </HBox>
                <VBox
                    class="sapUiSmallMarginTop"
                    width="95%"
                    visible="{= (${app>/aSelectedGroupIds} 
                                &amp;&amp; ${app>/aSelectedGroupIds}.length > 0) 
                                &amp;&amp; (${local>/oCurrentSpot/stampedUsers}
                                &amp;&amp; ${local>/oCurrentSpot/stampedUsers}.length > 0) ? true : false }"
                >
                    <Title text="{i18n>stampedBy}" />
                    <f:AvatarGroup
                        id="avatarGroup"
                        groupType="Individual"
                        avatarDisplaySize="S"
                        press="onAvatarGroupPress"
                        items="{local>/oCurrentSpot/stampedUsers}"
                    >
                        <f:AvatarGroupItem
                            initials="{path: 'local>name', formatter: '.onFormatInitialsByName'}"
                            fallbackIcon="sap-icon://person-placeholder"
                            src="{local>picture}"
                            tooltip="{local>name}"
                            fieldGroupIds="{local>ID}"
                        />
                    </f:AvatarGroup>
                </VBox>
                <HBox
                    class="sapUiSmallMarginTop"
                    width="95%"
                    visible="false"
                >
                    <ExpandableText
                        class="sapUiTinyMarginBottom sapUiTinyMarginTop"
                        text="{local>/description}"
                    />
                </HBox>
                <HBox class="sapUiSmallMarginTop">
                    <ScrollContainer
                        width="100%"
                        height="300px"
                        vertical="true"
                    >
                        <List
                            id="idTravelTimesList"
                            headerText="{i18n>nearbyPois}"
                            items="{local>/TravelTimes}"
                        >
                        <StandardListItem />
                        <!-- populated by MapsInnerController-->
                        </List>
                    </ScrollContainer>
                </HBox>
            </VBox>
        </f:content>
    </f:Card>
</VBox>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:ux="sap.uxap"
    xmlns:core="sap.ui.core"
    xmlns:chart="sap.suite.ui.microchart"
>
    <Dialog
        title="{i18n>badges}"
        class="sapUiResponsiveContentPadding"
        horizontalScrolling="false"
    >
        <IconTabBar
            expanded="{device>/isNoPhone}"
            class="sapUiResponsiveContentPadding"
        >
            <items>
                <IconTabFilter
                    text="{i18n>general}"
                    key="general"
                >
                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop sapUiMediumMarginBottom"
                    >
                        <Title text="{i18n>titleBronze}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/01-bronze.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '8'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '8'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>bronzeRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleSilver}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/02-silver.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '16'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '16'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>silverRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleGold}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/03-gold.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '24'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '24'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>goldRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleKing}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/04-king.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '50'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '50'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>kingRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleRiser}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/05-riser.png"
                                mode="Background"
                                height="5rem"
                                width="10rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{localDialog>/iRiserPercentage}"
                                valueColor="{localDialog>/sRiserValueColor}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>riserRequirementText}"
                            class="sapUiTinyMargin"
                        />
                        <Panel
                            expandable="true"
                            headerText="{i18n>miningStamps}"
                            width="auto"
                            class="sapUiTinyMargin"
                        >
                            <content>
                                <Text
                                    text="TODO hier kommt eine Liste der BenÃ¶tigten Stempel"
                                />
                            </content>
                        </Panel>
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleBackpack}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/06-backpack.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '100'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '100'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>backpackRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleShoe}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/07-shoe.jpg"
                                mode="Background"
                                height="10rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '150'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '150'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>shoeRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiMediumMarginTopBottom"
                    >
                        <Title text="{i18n>titleEmperor}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/08-emperor.jpg"
                                mode="Background"
                                height="5rem"
                                width="10rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '222'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '222'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMar ginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>emperorRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>
                </IconTabFilter>
                <IconTabFilter
                    text="{i18n>theme}"
                    key="theme"
                >
                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop sapUiMediumMarginBottom"
                    >
                        <Title text="{i18n>titleBoarder}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/S1-boarder.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{localDialog>/iBoarderPercentage}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}], formatter: '.calculateValueColorPercentage'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>boarderRequirementText}"
                            class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"
                        />
                        <Panel
                            expandable="true"
                            headerText="{i18n>boarderStamps}"
                            width="auto"
                            class="sapUiTinyMargin"
                        >
                            <content>
                                <MessageStrip
                                    text="{i18n>warningMsgMissingSpecialStamps}"
                                    type="Warning"
                                    class="sapUiTinyMarginBottom"
                                >
                                    <link />
                                </MessageStrip>
                                <List
                                    mode="SingleSelectMaster"
                                    items="{localDialog>/aRequiredStampsBoarder}"
                                >
                                    <CustomListItem>
                                        <HBox
                                            justifyContent="SpaceBetween"
                                            alignItems="Center"
                                            width="100%"
                                        >
                                            <HBox>
                                                <CheckBox
                                                    editable="false"
                                                    selected="{localDialog>visited}"
                                                />
                                                <Text
                                                    text="{localDialog>name}"
                                                    class="sapUiTinyMargin"
                                                />
                                            </HBox>
                                            <Button
                                                icon="sap-icon://navigation-right-arrow"
                                                type="Transparent"
                                                press="onStampNavigatePress"
                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="ID"
                                                        value="{localDialog>ID}"
                                                        writeToDom="true"
                                                    />
                                                </customData>
                                            </Button>
                                        </HBox>
                                    </CustomListItem>
                                </List>
                            </content>
                        </Panel>
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop sapUiMediumMarginBottom"
                    >
                        <Title text="{i18n>titleGoethe}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/S2-goethe.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{localDialog>/iGoethePercentage}"
                                valueColor="{parts: [{path: 'localDialog>/iGoethePercentage'}], formatter: '.calculateValueColorPercentage'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>goetheRequirementText}"
                            class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"
                        />
                        <Panel
                            expandable="true"
                            headerText="{i18n>goethteStamps}"
                            width="auto"
                            class="sapUiTinyMargin"
                        >
                            <content>
<List
                                    mode="SingleSelectMaster"
                                    items="{localDialog>/aRequiredStampsGoethe}"
                                >
                                    <CustomListItem>
                                        <HBox
                                            justifyContent="SpaceBetween"
                                            alignItems="Center"
                                            width="100%"
                                        >
                                            <HBox>
                                                <CheckBox
                                                    editable="false"
                                                    selected="{localDialog>visited}"
                                                />
                                                <Text
                                                    text="{localDialog>name}"
                                                    class="sapUiTinyMargin"
                                                />
                                            </HBox>
                                            <Button
                                                icon="sap-icon://navigation-right-arrow"
                                                type="Transparent"
                                                press="onStampNavigatePress"
                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="ID"
                                                        value="{localDialog>ID}"
                                                        writeToDom="true"
                                                    />
                                                </customData>
                                            </Button>
                                        </HBox>
                                    </CustomListItem>
                                </List>
                            </content>
                        </Panel>
                    </VBox>

                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop sapUiMediumMarginBottom"
                    >
                        <Title text="{i18n>titleWitchTrail}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/S3-witchTrail.jpg"
                                mode="Background"
                                height="5rem"
                                width="5rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{localDialog>/iWitchTrailPercentage}"
                                valueColor="{parts: [{path: 'localDialog>/iWitchTrailPercentage'}], formatter: '.calculateValueColorPercentage'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>

                        <Text
                            text="{i18n>withTrailRequirementText}"
                            class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"
                        />
                        <Panel
                            expandable="true"
                            headerText="{i18n>witchTrailStamps}"
                            width="auto"
                            class="sapUiTinyMargin"
                        >
                            <content>

<List
                                    mode="SingleSelectMaster"
                                    items="{localDialog>/aRequiredStampsWitchTrail}"
                                >
                                    <CustomListItem>
                                        <HBox
                                            justifyContent="SpaceBetween"
                                            alignItems="Center"
                                            width="100%"
                                        >
                                            <HBox>
                                                <CheckBox
                                                    editable="false"
                                                    selected="{localDialog>visited}"
                                                />
                                                <Text
                                                    text="{localDialog>name}"
                                                    class="sapUiTinyMargin"
                                                />
                                            </HBox>
                                            <Button
                                                icon="sap-icon://navigation-right-arrow"
                                                type="Transparent"
                                                press="onStampNavigatePress"
                                            >
                                                <customData>
                                                    <core:CustomData
                                                        key="ID"
                                                        value="{localDialog>ID}"
                                                        writeToDom="true"
                                                    />
                                                </customData>
                                            </Button>
                                        </HBox>
                                    </CustomListItem>
                                </List>
                            </content>
                        </Panel>
                    </VBox>
                </IconTabFilter>
                <IconTabFilter
                    text="{i18n>children}"
                    key="children"
                >
                    <VBox
                        class="sapUiSmallMarginBeginEnd sapUiSmallMarginTop sapUiMediumMarginBottom"
                    >
                        <Title text="{i18n>titlePrince}" />
                        <FlexBox justifyContent="SpaceBetween">
                            <Image
                                src="images/badges/99-prince.png"
                                mode="Background"
                                height="5rem"
                                width="15rem"
                            />
                            <chart:RadialMicroChart
                                size="M"
                                percentage="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '11'}], formatter: '.calculatePercentage'}"
                                valueColor="{parts: [{path: 'localDialog>/iSelectedCount'}, {value: '11'}], formatter: '.calculateValueColor'}"
                                class="sapUiTinyMarginBeginEnd"
                            />
                        </FlexBox>
                        <Text
                            text="{i18n>princeRequirementText}"
                            class="sapUiTinyMargin"
                        />
                    </VBox>
                </IconTabFilter>
            </items>
        </IconTabBar>
        <endButton>
            <Button
                text="{i18n>close}"
                press="onCloseButtonPress"
            />
        </endButton>
    </Dialog>
</core:FragmentDefinition>

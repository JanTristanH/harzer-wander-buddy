<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="myPopover"
        title="{i18n>Filters}"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Bottom"
    >
        <VBox>
            <Button
                press='.onToggleLables'
                text="Label Umschalten"
            />
            <Button
                press='.onToggleStampedSpots'
                text="Besuchte Stempel ausblenden"
            />
            <Button
                press='.onShowGreens'
                text="Ungestempelte Ausblenden"
            />
            <Button
                press='.onShowAll'
                text="Alles anzeigen"
            />
        </VBox>
    </Popover>
</core:FragmentDefinition>

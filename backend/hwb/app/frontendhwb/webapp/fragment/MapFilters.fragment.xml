<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="myPopover"
        title="{i18n>Filters}"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Bottom"
    >
        <VBox>
            <!-- <CheckBox text="{i18n>showName}" selected="{app>/bShowLabels}" /> -->
            <CheckBox text="{i18n>visitedStamps}" selected="{app>/bShowStampedSpots}" />
            <CheckBox text="{i18n>missingStamps}" selected="{app>/bShowUnStampedSpots}" />
            <CheckBox text="{i18n>ParkingSpaces}" selected="{app>/bShowParkingSpots}" />
            
            <Button press='onShowAllPress' text="{i18n>showAll}" class="sapUiTinyMargin" />
            <Button press='.onLocateMePress' text="{i18n>showCurrentLocation} 📍" class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"/>
        </VBox>
    </Popover>
</core:FragmentDefinition>

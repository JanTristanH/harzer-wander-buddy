<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="myPopover"
        title="{i18n>Filters}"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Bottom"
    >
        <VBox>
            <CheckBox id="idToggleLabelCheckBox" text="{i18n>toggleLabel}" select="onToggleLabelsCheckBox" selected="true" />
            <CheckBox id="idToggleStampedCheckBox" text="{i18n>visitedStamps}" select="onVisitedStampsCheckkBoxSelect" selected="true" />
            <CheckBox id="idToggleUnstampedCheckBox" text="{i18n>missingStamps}" select="onNotVisitedStampsCheckkBoxSelect" selected="true" />
            <CheckBox id="idParkingSpaceCheckBox" text="{i18n>ParkingSpaces}" select="onParkingSpaceCheckBox" selected="true" />
            
            <Button press='onShowAllPress' text="{i18n>showAll}" class="sapUiTinyMargin" />
            <Button press='.onLocateMePress' text="{i18n>showCurrentLocation} 📍" class="sapUiTinyMarginBeginEnd sapUiTinyMarginBottom"/>
        </VBox>
    </Popover>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="myPopover"
        title="{i18n>Filters}"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Bottom"
    >
        <VBox>
            <CheckBox text="Label Umschalten" select="onToggleLabelsCheckBox" selected="true" />
            <Button
                press='.onToggleStampedSpots'
                text="Besuchte Stempel ausblenden"
            />
            <Button
                press='.onShowGreens'
                text="Ungestempelte Ausblenden"
            />
            <CheckBox id="idParkingSpaceCheckBox" text="{i18n>ParkingSpace}" select="onParkingSpaceCheckBox" selected="true" />
            <Button
                press='.onShowAll'
                text="Alles anzeigen"
            />
            <Button
                press='.onLocateMePress'
                text="Aktuellen Standort bestimmen 📍"
            />
        </VBox>
    </Popover>
</core:FragmentDefinition>

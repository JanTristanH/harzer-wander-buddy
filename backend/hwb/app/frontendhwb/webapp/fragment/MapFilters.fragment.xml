<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Popover
        id="myPopover"
        title="{i18n>Filters}"
        class="sapUiResponsivePadding--header sapUiResponsivePadding--footer"
        placement="Bottom"
    >
        <VBox>
            <CheckBox id="idToggleLabelCheckBox" text="Label Umschalten" select="onToggleLabelsCheckBox" selected="true" />
            <CheckBox id="idToggleStampedCheckBox" text="Besuchte Stempel" select="onVisitedStampsCheckkBoxSelect" selected="true" />
            <CheckBox id="idToggleUnstampedCheckBox" text="Unbesuchte Stempel" select="onNotVisitedStampsCheckkBoxSelect" selected="true" />
            <CheckBox id="idParkingSpaceCheckBox" text="{i18n>ParkingSpaces}" select="onParkingSpaceCheckBox" selected="true" />
            
            <Button press='onShowAllPress' text="Alles anzeigen"/>
            <Button press='.onLocateMePress' text="Aktuellen Standort bestimmen 📍"/>
        </VBox>
    </Popover>
</core:FragmentDefinition>

<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form">
    <Dialog title="{i18n>EnterHikingRouteParameters}" class="sapUiResponsiveContentPadding">
        <f:Form editable="true">
            <f:layout>
                <f:ResponsiveGridLayout
                    labelSpanXL="3"
                    labelSpanL="3"
                    labelSpanM="3"
                    labelSpanS="12"
                    adjustLabelSpan="false"
                    emptySpanXL="4"
                    emptySpanL="4"
                    emptySpanM="4"
                    emptySpanS="0"
                    columnsXL="1"
                    columnsL="1"
                    columnsM="1"
                    singleContainerFullSize="false" />
            </f:layout>
            <f:formContainers>
                <f:FormContainer>
                    <f:formElements>
                        <f:FormElement label="{i18n>MaxDuration} (in seconds)">
                            <f:fields>
                                <Input value="{/maxDuration}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>MaxDistance} (in meters)">
                            <f:fields>
                                <Input value="{/maxDistance}" />
                            </f:fields>
                        </f:FormElement>

                        <f:FormElement label="{i18n>StartAddress}">
                            <f:fields>
                                <Input id="autocomplete"
                                    placeholder="{i18n>StartWnteringAddress}" />
                                </f:fields>
                        </f:FormElement>
                        <f:FormElement label="">
                            <f:fields>
                                    <Button press='onUseCurrentLocation' text="{i18n>useCurrentLocation} 📍" class="sapUiSmallMarginBottom"/>
                                </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>LatitudeStart}" visible="false">
                            <f:fields>
                                <Input value="{/latitudeStart}" enabled="false" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>LongitudeStart}" visible="false">
                            <f:fields>
                                <Input value="{/longitudeStart}" enabled="false"/>
                            </f:fields>
                        </f:FormElement>

                        <f:FormElement label="{i18n>AllowDriveInRoute}">
                            <f:fields>
                                <Switch state="{/allowDriveInRoute}" />
                            </f:fields>
                        </f:FormElement>
                        <f:FormElement label="{i18n>MinimumStampCount}" visible="false">
                            <f:fields>
                                <Input value="{/minStampCount}" type="Number" />
                            </f:fields>
                        </f:FormElement>
                    </f:formElements>
                </f:FormContainer>
            </f:formContainers>
        </f:Form>
        <beginButton>
            <Button text="{i18n>okay}" press="onSubmitRouting" />
        </beginButton>
        <endButton>
            <Button text="{i18n>cancel}" press="onCancel" />
        </endButton>
    </Dialog>
</core:FragmentDefinition>
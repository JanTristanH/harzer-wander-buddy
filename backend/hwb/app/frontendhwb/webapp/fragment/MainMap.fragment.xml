<vbm:GeoMap id="map" mapConfiguration="{mapConfig>/}" initialPosition="10.30147999999997;51.7462" initialZoom="16"
    height="100%" width="100%"
	xmlns:vbm="sap.ui.vbm"
    centerPosition="{local>centerPosition}"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    zoomChanged="onGeoMapZoomChanged">
    <!-- map config from https://embed.plnkr.co/plunk/k5ql5sUBbmmfJ0yU -->
    <vbm:vos>
        <vbm:Routes items="{local>/routes}">
            <vbm:Route position="{local>positionString}" directionIndicator="true"
                lineDash="{ path: 'local>travelMode', formatter: '.onFormatRouteLineDash'}"
                tooltip="Länge: {local>duration}s - Distanz: {local>distance}" labelText="{local>order}" 
                end="1" start="0" color="rgba(92,186,230,1.0)" 
                colorBorder="rgb(255,255,255)" hotDeltaColor="RHLSA(0,1,1,0.6)"/>
        </vbm:Routes>

        <vbm:Spots id ="idAllPointsOfInterestsSpots" items="{ path: '/Stampboxes', parameters:{expand : 'Stampings'} }">
            <vbm:Spot id="inner" position="{longitude};{latitude}" text="{number}" labelType="Default" labelText="{name}" app:labelTextHidden="{name}" tooltip="{name}" labelPos="5" type="{ path: 'Stampings', formatter: '.onFormatBoxType'}" 
                contextMenu="onSpotContextMenu" click="onSpotClick" app:id="{ID}" app:stamp="true" app:description="{description}"/>
        </vbm:Spots>

        <vbm:Spots id ="idParkingSpotsSpots" items="{/ParkingSpots}">
            <vbm:Spot id="idParkingInnerSpot" position="{longitude};{latitude}" text="P" labelText="{name}" tooltip="{name}" labelPos="5" type="Default" app:labelTextHidden="{name}"
                click="onSpotClick" app:id="{ID}" app:stamp="false" app:description="{description}"/>
        </vbm:Spots>

        <vbm:Spots>
            <vbm:Spot text="📍" id="idUserLocationSpot" position="{local>/UserLocationLng};{local>/UserLocationLat}"/>
        </vbm:Spots>
    </vbm:vos>
</vbm:GeoMap>
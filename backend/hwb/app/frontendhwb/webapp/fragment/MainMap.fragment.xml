<vbm:GeoMap id="map" mapConfiguration="{mapConfig>/}" initialPosition="10.30147999999997;51.7462" initialZoom="14"
    height="100%" width="100%"
	xmlns:vbm="sap.ui.vbm"
    zoomChanged="onGeoMapZoomChanged">
    <!-- map config from https://embed.plnkr.co/plunk/k5ql5sUBbmmfJ0yU -->
    <vbm:vos>
        <vbm:Routes items="{local>/routes}">
            <vbm:Route position="{local>positionString}" directionIndicator="true"
                lineDash="{ path: 'local>travelMode', formatter: '.onFormatRouteLineDash'}"
                tooltip="LÃ¤nge: {local>duration}s - Distanz: {local>distance}" labelText="{local>order}" 
                end="1" start="0" color="rgba(92,186,230,1.0)" 
                colorBorder="rgb(255,255,255)" hotDeltaColor="RHLSA(0,1,1,0.6)"/>
        </vbm:Routes>

        <vbm:Spots id ="idAllPointsOfInterestsSpots" items="{ path: '/Stampboxes', parameters:{expand : 'Stampings'} }">
            <vbm:Spot id="inner" position="{longitude};{latitude}" text="{number}" labelType="Default" labelText="{name}" tooltip="{name}" labelPos="5" type="{ path: 'Stampings', formatter: '.onFormatBoxType'}" 
                contextMenu="onSpotContextMenu"/>
        </vbm:Spots>

        <vbm:Spots id ="idParkingSpots" items="{local>/Parking}">
            <vbm:Spot id="idNumberInnerParkingSpot" position="{local>longitude};{local>latitude}" text="{local>number}" labelType="Default" labelText="{local>name}" tooltip="{local>name}" labelPos="5" type="Default" />
        </vbm:Spots>
    </vbm:vos>
</vbm:GeoMap>
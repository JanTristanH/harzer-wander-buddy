<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout">
	<Popover
		id="idUserMenu"
		title="{i18n>userMenu}"
		titleAlignment="Center"
		placement="Bottom"
		afterClose="onPopoverClose">
			<List>
		<items>
			<StandardListItem icon="sap-icon://log" title="{i18n>logout}" type="Active" press="onLogoutPress" />
		</items>
	</List>
	</Popover>
</core:FragmentDefinition>
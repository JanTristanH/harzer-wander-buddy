<mvc:View controllerName="hwb.frontendhwb.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
            <VBox class="sapUiSmallMargin">
                <IconTabBar id="idIconTabBarNoIcons" expanded="{device>/isNoPhone}" class="sapUiResponsiveContentPadding">
                    <items>
                        <IconTabFilter text="List" key="list">
                            <Text text="List Tab ..." />
                            <mvc:XMLView viewName="hwb.frontendhwb.view.List"/>
                        </IconTabFilter>
                        <IconTabFilter text="Map" key="map">
                            <Text text="Map goes here ..." />
                            <mvc:XMLView viewName="hwb.frontendhwb.view.Map"/>
                        </IconTabFilter>
                        <IconTabFilter text="Notes" key="notes">
                            <Text text="Notes go here ..." />
                        </IconTabFilter>
                        <IconTabFilter text="People" key="people">
                            <Text text="People content goes here ..." />
                        </IconTabFilter>
                    </items>
                </IconTabBar>
            </VBox>
        </content>
    </Page>
</mvc:View>

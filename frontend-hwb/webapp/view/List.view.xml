<mvc:View controllerName="hwb.frontendhwb.controller.List"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:core="sap.ui.core">
    <HBox class="sapUiResponsiveContentPadding">
        <Table id="StampingsTable" inset="false" growing="true" growingThreshold="250" mode="MultiSelect" selectionChange="onSelectionChange" items="{
                    path: '/PersonalizedStampboxes',
                    sorter: {
                        path: 'name'
                    }
                }">
            <headerToolbar>
                <Toolbar>
                    <Title text="Stamps" level="H2"/>
                    <ToolbarSpacer />
                </Toolbar>
            </headerToolbar>
            <columns>
                <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" width="auto">
                    <Text text="Number" />
                </Column>
                <Column minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" width="auto">
                    <Text text="Title" />
                </Column>
                <Column minScreenWidth="Phone" demandPopin="true" popinDisplay="Inline" width="auto">
                    <Text text="Created By" />
                </Column>
                <Column minScreenWidth="Desktop" demandPopin="true" popinDisplay="Block" hAlign="Begin">
                    <Text text="Technical Key" />
                </Column>
            </columns>
            <items>
                <ColumnListItem type="Active">
                    <cells>
                        <ObjectIdentifier title="{number}"/>
                        <Text text="{name}" />
                        <Text text="{createdBy}" />
                        <Text text="{technicalKey}" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
        <Button text="Action" press=".onPress" />
    </HBox>
</mvc:View>
